@model Neighbours.Web.Areas.Private.Models.Communities.CommunityDetailsViewModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="col-md-5  modal-content">
        @Html.DisplayFor(i => i)
        <div id="target">
            @Html.Partial("_PartialButtonsBadges")
        </div>
    </div>
    <div class="col-md-5 col-md-offset-1 modal-content">

        @Html.Partial("_MapPartialDetails")

    </div>

</div>
<div class="container"><h3 class="text-center modal-content">Users</h3></div>
<div class="container row-mine">
    
        @foreach (var item in Model.Users)
        {
            <div class="col-md-2 modal-content">
                <h4>@item.UserName</h4>

                <div class="col-md-12"><img width="50%" src="@item.ProfileImage.UrlPath.Remove(0,1)/@item.ProfileImage.NewFileName" /></div>
            </div>
        }
           

</div>
<div class="container"><h3 class="text-center modal-content">Admins</h3></div>
<div class="container row-mine">

    @foreach (var item in Model.Admins)
    {
        <div class="col-md-2 modal-content">
            <h4>@item.UserName</h4>

            <div class="col-md-12"><img width="50%" src="@item.ProfileImage.UrlPath.Remove(0,1)/@item.ProfileImage.NewFileName" /></div>
        </div>
    }


</div>



@section Scripts {
    <script src="http://maps.google.com/maps/api/js?language=bg-BG&libraries=places" type="text/javascript"></script>

    @Scripts.Render("~/Scripts/underscore-min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/site/community-image.js")
    @Scripts.Render("~/Scripts/site/map-community-details.js")
}

